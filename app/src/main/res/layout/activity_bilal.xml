<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".BilalActivity">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_span="3" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text=""
            android:id="@+id/textViewCity"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="1dp"
            android:layout_span="3" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal">
        <Space
            android:layout_width="20dp"
            android:layout_height="10dp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text=""
            android:id="@+id/textViewDate"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_span="3" />
    </TableRow>


    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal">
        <Space
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:layout_margin="1dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fajr"
            android:id="@+id/textViewFajrEN"
            android:layout_column="0"
            android:gravity="left|top"
            android:width="90dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="1dp"
            android:layout_gravity="left|top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:id="@+id/textViewFajr"
            android:gravity="center_horizontal|top"
            android:layout_column="1"
            android:width="90dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:text="الفجر"
            android:id="@+id/textViewFajrAR"
            android:gravity="right|top"
            android:layout_column="2"
            android:width="90dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="1dp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:layout_margin="1dp">
        <Space
            android:layout_width="20dp"
            android:layout_height="10dp"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:layout_margin="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:text="Sunrise"
            android:id="@+id/textViewSunriseEN"
            android:layout_column="0"
            android:gravity="left|top" android:width="90dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:text=""
            android:id="@+id/textViewSunrise"
            android:gravity="center_horizontal|top"
            android:layout_column="1"
            android:width="90dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:text="الشروق"
            android:id="@+id/textViewSunriseAR"
            android:width="90dp"
            android:layout_column="2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="right|top"
            android:layout_margin="1dp" />
    </TableRow>


    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal">
        <Space
            android:layout_width="20dp"
            android:layout_height="10dp"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:layout_gravity="right"
        android:layout_margin="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:text="Dhuhr"
            android:id="@+id/textViewDhuhurEN"
            android:layout_column="0"
            android:gravity="left|top"
            android:width="90dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:text=""
            android:id="@+id/textViewDhuhur"
            android:gravity="center_horizontal|top"
            android:layout_column="1"
            android:width="90dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:text="الظهر"
            android:id="@+id/textViewDhuhurAR"
            android:gravity="right|top"
            android:width="90dp"
            android:layout_column="2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="1dp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal">
        <Space
            android:layout_width="20dp"
            android:layout_height="10dp"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:layout_margin="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:text="Asr"
            android:id="@+id/textViewAsrEN"
            android:layout_column="0"
            android:gravity="left|top"
            android:width="90dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:text=""
            android:id="@+id/textViewAsr"
            android:gravity="center_horizontal|top"
            android:layout_column="1"
            android:width="90dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:text="العصر"
            android:id="@+id/textViewAsrAR"
            android:width="90dp"
            android:layout_column="2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="right|top"
            android:layout_margin="1dp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal">
        <Space
            android:layout_width="20dp"
            android:layout_height="10dp"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:layout_margin="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:text="Maghrib"
            android:id="@+id/textViewMaghribEN"
            android:layout_column="0"
            android:gravity="left|top"
            android:width="90dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:text=""
            android:id="@+id/textViewMaghrib"
            android:gravity="center_horizontal|top"
            android:layout_column="1"
            android:width="90dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:text="المغرب"
            android:id="@+id/textViewMaghribAR"
            android:gravity="right|top"
            android:width="90dp"
            android:layout_column="2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="1dp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal">
        <Space
            android:layout_width="20dp"
            android:layout_height="10dp"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:layout_margin="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:text="Isha"
            android:id="@+id/textViewIshaEN"
            android:layout_column="0"
            android:gravity="left|top"
            android:width="90dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:text=""
            android:id="@+id/textViewIsha"
            android:gravity="center_horizontal|top"
            android:layout_column="1"
            android:width="90dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:text="العشاء"
            android:id="@+id/textViewIshaAR"
            android:width="90dp"
            android:layout_column="2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="right|top"
            android:layout_margin="1dp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal">
        <Space
            android:layout_width="20dp"
            android:layout_height="15dp"/>
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:layout_margin="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:text="Next fajr"
            android:layout_column="0"
            android:gravity="left|top"
            android:width="90dp"
            android:id="@+id/textViewNextFajrEN"
            android:visibility="invisible"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:text=""
            android:id="@+id/textViewNextFajr"
            android:gravity="center_horizontal|top"
            android:layout_column="1"
            android:width="90dp"
            android:visibility="invisible"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_margin="1dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="فجر الغد"
            android:gravity="right|top"
            android:width="90dp"
            android:layout_column="2"
            android:id="@+id/textViewNextFajrAR"
            android:visibility="invisible"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="right|top"
            android:layout_margin="1dp" />
    </TableRow>

</TableLayout>